{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "sourceRoot": "server",
    "types": [
      "body-parser",
      "express",
      "express-serve-static-core",
      "node",
      "serve-static",
      "hammerjs",
      "socket.io"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}