.profile
  padding 0.5rem
  height 100%
  box-sizing border-box
  position relative

  .dd
    opacity 0
    visibility hidden
    transition opacity 0.3s ease-in-out
    position absolute
    top 6rem
    left: 1rem
    .inner
      background $block-background
      padding 1rem
      box-shadow $global-box-shadow
      margin-top 1rem

  span
    color #fff
    float left
    font-size 2rem
    letter-spacing 1px
    line-height 5rem
    padding-left 1rem

  .img
    float left
    box-sizing border-box
    background $block-background
    border-radius 50%
    box-shadow $global-box-shadow
    img
      box-sizing border-box
      padding 1rem
      height 100%
      width auto

  &:hover
    .dd
      opacity 1
      visibility visible

.room-form
  padding $block-padding
  box-shadow $global-box-shadow
  background $block-background