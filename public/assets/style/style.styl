@import 'skeleton.styl'
@import 'navigation.styl'

body
  margin 0

.left
  float left
.right
  float right

.users-block
  visibility hidden
  &.active
    visibility visible

.user-profile
  width 75px
  height 75px

.chat-icon
  width 50px
  height 50px

.small-form
  max-width 400px
  margin 0 auto

.room
  width 32%
  box-sizing border-box
  margin-right 2%
  margin-bottom 20px
  float left
  background #e5e5e5
  box-shadow $global-box-shadow
  padding 20px
  &:nth-child(3n)
    margin-right 0

room ul li.complete > span
  text-decoration line-through

.room-create
  position fixed
  bottom -349px
  left 0
  box-sizing border-box
  width 100%
  background #e5e5e5
  box-shadow $global-box-shadow
  padding 30px
  transition 0.5s ease-in-out

  &.active
    bottom 0

.create-open
  position absolute
  top -38px
  left 50px
  display inline-block
  height 38px
  padding 0 30px
  color #fff
  text-align center
  font-size 11px
  font-weight 600
  line-height 38px
  letter-spacing 0.1rem
  text-transform uppercase
  text-decoration none
  white-space nowrap
  background-color #e53935
  border-radius 0px
  border none
  cursor pointer
  box-sizing border-box

form
  margin-bottom 0