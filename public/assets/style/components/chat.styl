.chat-window
  position fixed
  bottom 1rem
  right 1rem
  width 50rem
  height 0
  background $block-background
  box-shadow $global-box-shadow
  transition all 0.3s ease-in-out
  z-index 10
  opacity 0
  visibility hidden

  &.active
    height 50rem
    opacity 1
    visibility visible

  .view
    height 83%
    overflow-y auto

  ul
    list-style-type none
    padding 2rem

  .message-view
    padding 2rem

    li
      position relative
      background $main-background
      box-shadow $global-box-shadow
      padding 1rem
      min-height 5rem
      margin-bottom 2rem

      p
        padding-left 6rem
        padding-top 2rem
        color #fff
        font-size 1.5rem
        margin 0

      .aut
        position absolute
        top 1rem
        left 7rem
        color #fff

      .img
        position absolute
        left 1rem
        top 1rem
        float left
        box-sizing border-box
        background $block-background
        height 5rem
        width 5rem
        border-radius 50%
        box-shadow $global-box-shadow
        img
          box-sizing border-box
          padding 1rem
          height 100%
          width auto

.chat-button
  position fixed
  z-index 9
  bottom 1rem
  right 1rem
  transition all 0.3s ease-in-out

  &.active
    bottom 52rem

.new-message
  position absolute
  bottom 0
  margin 0
  width 100%
  input
    margin 0
    width 100%
    border none
    font-size 2rem
    padding 3rem 2rem
    border-top 2px solid #c1c1c1